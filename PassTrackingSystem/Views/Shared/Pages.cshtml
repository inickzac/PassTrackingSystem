@model PassTrackingSystem.Models.SeparatorOnThePage.PageDividorInfo
<div class="container-fluid pading-left-z" id="PageGroup">
    <form method="get" asp-action="Index" asp-controller="Home">
        <div class="container-fluid">
            <div class="row">
                <div class="col-5" id="padingLeft0">
                    <div class="input-group mb-3 " id="count-page-form">
                        <input type="text" name="CurrentPage" class="form-control " placeholder="№" min="1" max="@Model.TotalPages" value="@Model.CurrentPage">
                        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Перейти на страницу</button>
                    </div>
                </div>
                <div class="col-5">
                    <div class="input-group">
                        <select class="form-select" id="inputGroupSelect04" name="PageSize" aria-label="Example select with button addon" style="box-sizing:unset;">
                            @for (int i = 20; i < 200; i = i * 2)
                            {
                                if (i == Model.PageSize)
                                {
                                    <option selected value="@i">@i</option>
                                }
                                else
                                {
                                    <option value="@i">@i</option>
                                }
                            }
                        </select>
                        <button class="btn btn-outline-secondary" type="submit" id="change-quantity-elem">сменить кол-во элементов</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <form method="get" asp-action="Index" asp-controller="Home">
        @if (Model.TotalPages >= 4)
        {
            var CurrentPage = Model.CurrentPage;
            var CountSideButtom = 3;
            if (Model.HasPreviousPage)
            {
                var prevPage = Model.CurrentPage - 1;
                <button name="CurrentPage" type="submit" class="btn btn-secondary" value="@prevPage">Пред</button>
            }
            @for (int i = CurrentPage - CountSideButtom; i < CurrentPage; i++)
            {
                if (i > 0)
                {
                    <button name="CurrentPage" type="submit" class="btn btn-secondary"
                            value="@i">
                        @i
                    </button>
                }
            }
            <button name="CurrentPage" type="submit" class="btn btn-dark"
                    value="@CurrentPage">
                @CurrentPage
            </button>

            @for (int i = CurrentPage + 1; i <= CurrentPage + CountSideButtom && i <= Model.TotalPages; i++)
            {
                <button name="CurrentPage" type="submit" class="btn btn-secondary"
                        value="@i">
                    @i
                </button>
            }

            if (Model.HasNextPage)
            {
                var prevPage = Model.CurrentPage + 1;
                <button name="CurrentPage" type="submit" class="btn btn-secondary" value="@prevPage">След</button>
            }
        }
    </form>
</div>


