@{
    Layout = "";
}
@model UserVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @await Html.PartialAsync("Styles")
    @await Html.PartialAsync("_ValidationScriptsPartial")
</head>
<body>
    <div class="container-fluid">
        <div class="row" style="padding-top: 10%;">
            <div class="col-5 mx-auto">
                <div>
                    <form method="post">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Имя пользователя</label>
                            <input asp-for="@Model.AppUser.UserName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Пароль</label>
                            <input type="password" asp-for="@Model.Password" class="form-control" id="exampleInputPassword1">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


